{% extends "ASUAssetBundle::layout.html.twig" %}

{% block title %}{{ parent() }} | Win | Details{% endblock %}

{% block breadcrumbs %}
    <li>
        <a href="{{ path('asu_asset_default_index') }}">Home</a>
        <span class="divider">/</span>
    </li>
    <li>
        <a href="{{ path('asu_stack_team_list') }}">Teams</a>
        <span class="divider">/</span>
    </li>
    <li class="active">
        Team Details
    </li>
{% endblock %}

{% block pageHeaderTitle %}Team Details{% endblock %}

{% block content %}
    <h1>Team Details</h1>
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-head">Team Information</div>
                <div class="box-body box-body-nopadding">
                    {% block toolbar %}
                    {% endblock %}
                    <table class="table table-nomargin">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Genre</th>
                                <th>Date Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ team.name }}</td>
                                <td>{{ team.getGenre(true) }}</td>
                                <td>{{ (team.dateCreated is not null) ? team.dateCreated|date('Y-m-d') }}</td>
                                <td>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="box">
                <div class="box-head">Team Description</div>
                <div class="box-body box-body-nopadding">
                    <table class="table table-nomargin">
                        <thead>
                            <tr>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ team.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="box">
                <div class="box-head">Team Members</div>
                <div class="box-body box-body-nopadding">
                    <table class="table table-nomargin">
                        <thead>
                            <tr>
                                <th>Members</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
