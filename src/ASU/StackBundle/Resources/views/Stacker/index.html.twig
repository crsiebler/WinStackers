{% extends "ASUAssetBundle::layout.html.twig" %}

{% block content %}
    <h1>Stacker list</h1>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Passwordreset</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('stacker_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.passwordReset }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
