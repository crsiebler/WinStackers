{% extends "ASUAssetBundle::layout.html.twig" %}

{% block content %}
    <h1>Goal list</h1>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Percentcomplete</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('goal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.percentComplete }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
