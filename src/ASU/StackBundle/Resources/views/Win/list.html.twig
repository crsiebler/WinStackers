{% extends "ASUAssetBundle::layout.html.twig" %}

{% block title %}{{ parent() }} | Win | List{% endblock %}

{% block breadcrumbs %}
    <li>
        <a href="{{ path('asu_asset_default_index') }}">Home</a>
        <span class="divider">/</span>
    </li>
    <li class="active">
        Wins
    </li>
{% endblock %}

{% block pageHeaderTitle %}Wins{% endblock %}

{% block content %}
    <h1>Win list</h1>
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-head">Incomplete Wins</div>
                <div class="box-body box-body-nopadding">
                    {% block openToolbar %}
                    {% endblock %}
                    <table class="table table-nomargin">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Xp</th>
                                <th>Date Created</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for win in wins %}
                            <tr>
                                <td>{{ win.title }}</td>
                                <td>{{ win.description }}</td>
                                <td>{{ win.xp }}</td>
                                <td>{{ (win.dateCreated is not null) ? win.dateCreated|date('Y-m-d') }}</td>
                                <td>{{ win.getCategory(true) }}</td>
                                <td>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-head">Finished Wins</div>
                <div class="box-body box-body-nopadding">
                    {% block closedToolbar %}
                    {% endblock %}
                    <table class="table table-nomargin">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Xp</th>
                                <th>Date Created</th>
                                <th>Date Completed</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for win in wins %}
                            <tr>
                                <td>{{ win.title }}</td>
                                <td>{{ win.description }}</td>
                                <td>{{ win.xp }}</td>
                                <td>{{ (win.dateCreated is not null) ? win.dateCreated|date('Y-m-d') }}</td>
                                <td>{{ (win.dateCompleted is not null) ? win.dateCompleted|date('Y-m-d') }}</td>
                                <td>{{ win.getCategory(true) }}</td>
                                <td>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
