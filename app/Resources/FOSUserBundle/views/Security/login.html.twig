{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain "FOSUserBundle" %}

{% block title %}{{ parent() }} | Login{% endblock %}

{% block body %}
    <body class="login-body">
        <div class="login-wrap">
            <h2>Win Stackers</h2>
            <div class="login">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if error %}
                        <div class="alert alert-error">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            <strong>Error</strong> {{ error|trans }}.
                        </div>
                    {% endif %}
                    <div class="email">
                        <input type="text" name="_username" placeholder="{{ 'security.login.email'|trans }}" class='input-block-level required' require="required">
                    </div>
                    <div class="pw">
                        <input type="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" class='input-block-level required' required="required">
                    </div>
                    <div style="text-align: left;">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <input type="checkbox" style="width: 15px; vertical-align: top; display: inline-block;" name="_remember_me" /> 
                        <label style="display: inline-block; vertical-align: middle; margin-top: 0px;">
                            Remember Me
                            {#{{ 'security.login.remember_me'|trans }}#}
                        </label>
                    </div>

                    <button type="submit" value="Sign In" class='button button-basic-darkblue btn-block'>Sign In</button>
                </form>
            </div>
            {#<a href="{{ path("fos_user_resetting_request") }}" class='pw-link'>Forgot your <span>password</span>? <i class="icon-arrow-right"></i></a>#}
        </div>
    </body>
{% endblock %}

